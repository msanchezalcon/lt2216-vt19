<?xml version="1.0" encoding="UTF-8" ?>
<grammar version="1.0" tag-format="semantics/1.0" root="command">



<!-- Recognizing simple commands -->
  <rule id="object">
  <one-of>
     <item> light <tag> out = 'lights'; </tag></item>
     <item> heat <tag> out = 'heater'; </tag></item>
     <item> A C <tag> out = 'air conditioning'; </tag></item>
     <item> air conditioning </item>
     <item> window <tag> out = 'windows'; </tag></item>
     <item> door <tag> out = 'doors'; </tag></item>
  </one-of>
</rule>

<rule id="action" scope="public">
  <one-of>
     <item> on <tag>out="on";</tag></item>
     <item> off <tag>out="off";</tag></item>
     <item> ?please turn on <tag>out="on";</tag></item>
     <item> ?please turn off <tag>out="off";</tag></item>
     <item> ?please open <tag>out="open";</tag></item>
     <item> ?please close <tag>out="close";</tag></item>

  </one-of>
</rule>


  <!-- A simple directive to execute an action. -->
  <rule id="command" scope="public">
   <ruleref uri="#action"/>
   <ruleref uri="#object"/>
   <tag>out.object=rules.object; out.action=rules.action;<tag/>
  </rule>



</grammar>
