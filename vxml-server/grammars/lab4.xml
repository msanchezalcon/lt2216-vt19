<?xml version= "1.0"? encoding="UTF-8" ?>
 <grammar version="1.0" tag-format="semantics/1.0" root= "toplevel">

<-- TOP LEVEL -->
  <rule id="toplevel" scope= "public">
   <one-of>
   <item repeat="0-1"> I want to go</item>
    <item repeat="0-1"> I wanna go</item>
    <item repeat="0-1"> I want to travel</item>
    <item repeat="0-1"> I would like to go</item>
    </one-of>
   <one-of>
    <item>
    <ruleref uri="#fromcity"/></item>
    <ruleref uri="#tocity"/></item>
    <ruleref uri="#alldates"/></item>
    <ruleref uri="#foodoption"/></item>
    </one-of>
       <tag> out.fromcity=rules.fromcity; out.tocity=rules.tocity; out.alldates=rules.alldates; out.foodoption=rules.foodoption </tag>
     </item>
  </rule>













<rule id="from" scope= "public">
  <item repeat="0-1">from</item>
    <item>
      <ruleref uri="#city"/>
      <tag>out=rules.city</tag>
    </item>
  </rule>
  
 
  <rule id="to" scope= "public">
   <item repeat="0-1">to</item>
    <item>
      <ruleref uri="#city"/>
      <tag>out=rules.city</tag>
    </item>
  </rule>


<rule id="tocity" scope= "public">
  <item repeat="0-1"> 
  <tag>out=rules.city</tag>
</rule>
 

<rule id="fromcity" scope= "public">
  <item repeat="0-1">
  <tag>out=rules.city</tag>
</rule>

 
 
  <rule id="city" scope= "public">
  <one-of>
     <item> gothenburg <tag>out.city="gothenburg"</tag></item>
     <item> paris <tag>out.city="paris"</tag></item>
     <item> new york <tag>out.city="new york"</tag></item>
     <item> tokyo <tag>out.city="tokyo"</tag></item>
     <item> berlin <tag>out.city="berlin"</tag></item>
     <item> oslo <tag>out.city="oslo"</tag></item>
     <item> seville <tag>out.city="seville"</tag></item>
     <item> madrid <tag>out.city="madrid"</tag></item>
     <item> barcelona <tag>out.city="barcelona"</tag></item>
     <item> chicago <tag>out.city="chicago"</tag></item>
     <item> los angeles <tag>out.city="los angeles"</tag></item>
     <item> copenhagen <tag>out.city="copenhagen"</tag></item>
  </one-of>
</rule>


<rule id="alldates" scope="public">
<item repeat="0-1">
  <ruleref uri="#weekday"/><tag> out.weekday=rules.weekday </tag>
</item>
<item repeat="0-1">
  <ruleref uri="#month"/><tag> out.month=rules.month </tag>
</item>
<item repeat="0-1">
  <ruleref uri="#date"/><tag> out.date=rules.date </tag>
</item>
</rule>

 
  <rule id="date" scope="public">
    <one-of>
     <item> <item repeat="0-1"> the </item> 1st <item repeat="0-1"> of </item> <tag>out.date="1st"</tag></item>
     <item> <item repeat="0-1"> the </item> 2nd <item repeat="0-1"> of </item> <tag>out.date="2nd"</tag></item>
     <item> <item repeat="0-1"> the </item> 3rd <item repeat="0-1"> of </item> <tag>out.date="3rd"</tag></item>
     <item> <item repeat="0-1"> the </item> 4th <item repeat="0-1"> of </item> <tag>out.date="4th"</tag></item>
     <item> <item repeat="0-1"> the </item> 5th <item repeat="0-1"> of </item> <tag>out.date="5th"</tag></item>
     <item> <item repeat="0-1"> the </item> 6th <item repeat="0-1"> of </item> <tag>out.date="6th"</tag></item>
     <item> <item repeat="0-1"> the </item> 7th <item repeat="0-1"> of </item> <tag>out.date="7th"</tag></item>
     <item> <item repeat="0-1"> the </item> 8th <item repeat="0-1"> of </item> <tag>out.date="8th"</tag></item>
     <item> <item repeat="0-1"> the </item> 9th <item repeat="0-1"> of </item> <tag>out.date="9th"</tag></item>
     <item> <item repeat="0-1"> the </item> 10th <item repeat="0-1"> of </item> <tag>out.date="10th"</tag></item>
     <item> <item repeat="0-1"> the </item> 11th <item repeat="0-1"> of </item> <tag>out.date="11th"</tag></item>
     <item> <item repeat="0-1"> the </item> 12th <item repeat="0-1"> of </item> <tag>out.date="12th"</tag></item>
     <item> <item repeat="0-1"> the </item> 13th <item repeat="0-1"> of </item> <tag>out.date="13th"</tag></item>
     <item> <item repeat="0-1"> the </item> 14th <item repeat="0-1"> of </item> <tag>out.date="14th"</tag></item>
     <item> <item repeat="0-1"> the </item> 15th <item repeat="0-1"> of </item> <tag>out.date="15th"</tag></item>
     <item> <item repeat="0-1"> the </item> 16th <item repeat="0-1"> of </item> <tag>out.date="16th"</tag></item>
     <item> <item repeat="0-1"> the </item> 17th <item repeat="0-1"> of </item> <tag>out.date="17th"</tag></item>
     <item> <item repeat="0-1"> the </item> 18th <item repeat="0-1"> of </item> <tag>out.date="18th"</tag></item>
     <item> <item repeat="0-1"> the </item> 19th <item repeat="0-1"> of </item> <tag>out.date="19th"</tag></item>
     <item> <item repeat="0-1"> the </item> 20th <item repeat="0-1"> of </item> <tag>out.date="20th"</tag></item>
     <item> <item repeat="0-1"> the </item> 21st <item repeat="0-1"> of </item> <tag>out.date="21st"</tag></item>
     <item> <item repeat="0-1"> the </item> 22nd <item repeat="0-1"> of </item> <tag>out.date="22nd"</tag></item>
     <item> <item repeat="0-1"> the </item> 23rd <item repeat="0-1"> of </item> <tag>out.date="23rd"</tag></item>
     <item> <item repeat="0-1"> the </item> 24th <item repeat="0-1"> of </item> <tag>out.date="24th"</tag></item>
     <item> <item repeat="0-1"> the </item> 25th <item repeat="0-1"> of </item> <tag>out.date="25th"</tag></item>
     <item> <item repeat="0-1"> the </item> 26th <item repeat="0-1"> of </item> <tag>out.date="26th"</tag></item>
     <item> <item repeat="0-1"> the </item> 27th <item repeat="0-1"> of </item> <tag>out.date="27th"</tag></item>
     <item> <item repeat="0-1"> the </item> 28th <item repeat="0-1"> of </item> <tag>out.date="28th"</tag></item>
     <item> <item repeat="0-1"> the </item> 29th <item repeat="0-1"> of </item> <tag>out.date="29th"</tag></item>
     <item> <item repeat="0-1"> the </item> 30th <item repeat="0-1"> of </item> <tag>out.date="30th"</tag></item>
     <item> <item repeat="0-1"> the </item> 31st <item repeat="0-1"> of </item> <tag>out.date="31st"</tag></item>
    </one-of>
  </rule>

 
 
  <rule id="month" scope= "public">
  <one-of>
     <item> january <tag>out.month="january"</tag></item>
     <item> february <tag>out.month="february"</tag></item>
     <item> march <tag>out.month="march"</tag></item>
     <item> april <tag>out.month="april"</tag></item>
     <item> may <tag>out.month="may"</tag></item>
     <item> june <tag>out.month="june"</tag></item>
     <item> july <tag>out.month="july"</tag></item>
     <item> august <tag>out.month="august"</tag></item>
     <item> september <tag>out.month="september"</tag></item>
     <item> october <tag>out.month="october"</tag></item>
     <item> november <tag>out.month="november"</tag></item>
     <item> december <tag>out.month="december"</tag></item>
  </one-of>
 </rule>


<rule id="weekday" scope="public">
  <one-of>
     <item> monday <tag>out.weekday="monday"</tag></item>
     <item> tuesday <tag>out.weekday="tuesday"</tag</item>
     <item> wednesday <tag>out.weekday="wednesday"</tag</item>
     <item> thursday <tag>out.weekday="thursday"</tag</item>
     <item> friday <tag>out.weekday="friday"</tag</item>
     <item> saturday <tag>out.weekday="saturday"</tag</item>
     <item> sunday <tag>out.weekday="sunday"</tag</item>
     <item> tomorrow <tag>out.weekday="tomorrow"</tag</item>
     <item> today <tag>out.weekday="today"</tag</item>
  </one-of>
   </rule>
      
      
   <-- OPTIONAL SERVICE -->
  <rule id="foodoption" scope="public">  
   <one-of>
      <item repeat="0-1">and</item>
      <item repeat="0-1">with</item>
      <item repeat="0-1">eating</item>
      <item repeat="0-1">having</item>
    </one-of>
   <one-of>
     <item>food<tag>out.foodoption="food"</tag></item>
      <item>lunch<tag>out.foodoption="lunch"</tag></item>
      <item>breakfast<tag>out.foodoption="breakfast"</tag></item>
      <item>dinner<tag>out.foodoption="dinner"</tag></item>
    </one-of>
   </rule>
      
      
</grammar>
</xml>
