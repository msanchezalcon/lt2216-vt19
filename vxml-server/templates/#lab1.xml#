<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xmlns="http://www.w3.org/2001/vxml"
      xmlns:voxeo="http://community.voxeo.com/xmlns/vxml">
  <nomatch>
   I am sorry.  I didn't understand.
    <reprompt/>
  </nomatch>
  
  <noinput>
    I am sorry, I didn't hear you.
    <reprompt/>
  </noinput>

  <!-- Data model -->
  <var name="from" />
  <var name="to" />

  <!-- State machine -->
  <form id="welcome">
    <block>
      <prompt>
        <break time="2000" />
        Welcome to the flight booking service.
      </prompt>
      <goto next="#askFrom" />
    </block>
  </form>

  <form id="askFrom">
    <field name="fromField">
      <prompt>
        What city are you leaving from? The options are london, paris or new york.
      </prompt>
      <option>london</option>
      <option>paris</option>
      <option>new york</option>
    <filled>
       <prompt> Ok, from <value expr="fromField"> </prompt>
    </filled>
    </field>
    <filled>
      <assign name="from" expr="fromField" />
      <goto next="#askTo" />
    </filled>
  </form>

  <form id="askTo">
    <field name="toField">
      <prompt>
        Where are you going? Are you going to london, paris or new york?
      </prompt>
      <option>london</option>
      <option>paris</option>
      <option>new york</option>
      <filled>
       <prompt> Ok, to <value expr="toField"> </prompt>
    </field>
    <filled>
      <goto next="#askDate" />
      
    </filled>
  </form>
</vxml>